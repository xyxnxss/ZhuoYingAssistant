.wrap {
  display: flex;
  background-image: url(https://up.huicheimg.com/edpic/2b/cd/94/2bcd944a40e85a34f2e904f4461e163f.jpg);
  background-size: 100% 100%;
  height: 100vh;
  background-repeat: no-repeat;
  padding: 10%;
}

.wrap_cen {
  display: flex;
  text-align: center;
  flex-direction: column;
  margin: auto;
}

.title {
  font-size: 50rpx;
  font-weight: bold;
  color: rgb(46, 117, 224);
  letter-spacing: 10rpx;
}

.wrap_img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: 40rpx auto;
  border: 2px solid white;
  overflow: hidden;
}
.wrap_img image{
  width: 100%;
  height: 100%;
}
.but {
  margin: 40rpx 0;
  font-size: 30rpx;
  padding: 5rpx 30rpx;
}
