/* pages/user/user.wxss */

.wrap {
  display: flex;
  text-align: center;
  flex-direction: column;
  height: 300rpx;
}

.wrap_img {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin: 40rpx auto;
  border: 2px solid white;
  overflow: hidden;
}

.contents {
  padding: 6vw;
  display: flex;
  flex-wrap: wrap;
}

.contents view {
  width: 22vw;
  text-align: center;
  font-size: 25rpx;
  margin: 20rpx 0;
}

.con_img {
  width: 1.4rem;
  height: 1.4rem;
}
